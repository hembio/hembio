{
  "extends": "@hembio/tsconfig/dev",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "incremental": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "esnext",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "$/*": ["public/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
