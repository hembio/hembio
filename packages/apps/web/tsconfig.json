{
  "extends": "@hembio/tsconfig/dev",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "incremental": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "esnext",
    "isolatedModules": true,
    "paths": {
      "~/*": ["./src/*"],
      "$/*": ["./public/*"]
    }
  },
  "include": ["src"]
}
