{
  "private": true,
  "name": "@hembio/workspace",
  "type": "commonjs",
  "workspaces": [
    "packages/configs/*",
    "packages/libs/*",
    "packages/apps/*",
    "packages/services/*"
  ],
  "scripts": {
    "clean": "rimraf build && rimraf './packages/**/dist'",
    "build": "ts-node --transpile-only ./scripts/build.ts",
    "package": "pkg ./packages/services/server/dist/index.js --targets node14-win-x64 --out-dir dist",
    "test": "yarn workspaces foreach -v -p run test --colors --verbose",
    "lint": "eslint --ext .js,.jsx,.json,.ts,.tsx .",
    "codegen": "yarn workspace @hembio/api run codegen",
    "dev:api": "yarn workspace @hembio/api run dev",
    "dev:web": "yarn workspace @hembio/web run dev",
    "dev:desktop": "yarn workspace @hembio/desktop-app run dev",
    "depcheck": "yarn depcheck"
  },
  "devDependencies": {
    "@hembio/babel-config": "workspace:packages/configs/babel",
    "@hembio/eslint-config": "workspace:packages/configs/eslint",
    "@hembio/tsconfig": "workspace:packages/configs/typescript",
    "@types/eslint": "^8.4.3",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/rimraf": "^3.0.2",
    "@types/tar-stream": "^2.2.2",
    "@yarnpkg/pnpify": "^4.0.0-rc.9",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "eslint": "^8.18.0",
    "execa": "^5.1.1",
    "globby": "^12.2.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-watch-typeahead": "^1.1.0",
    "lint-staged": "^13.0.2",
    "node-gyp": "^9.0.0",
    "prettier": "^2.7.1",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "tar-stream": "^2.2.0",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "resolutions": {
    "@types/eslint": "latest",
    "@types/react": "latest",
    "@types/dom": "latest",
    "jstransform": "latest",
    "recast": "latest",
    "es3ify": "latest",
    "esprima": "latest",
    "esprima-fb": "latest",
    "typescript": "latest",
    "ts-node": "latest",
    "escaya": "latest",
    "react": "latest",
    "react-dom": "latest",
    "react-refresh": "latest",
    "temp-write": "^4.0.0",
    "tempfile": "^3",
    "p-queue": "^6",
    "base32-encode": "^1.2.0",
    "get-port": "^5.1.1",
    "internal-ip": "^6.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,html,css,yml,yaml}": "prettier --write"
  },
  "packageManager": "yarn@3.2.1"
}
